{
  "name": "@nlabs/metropolisjs",
  "version": "0.1.0",
  "description": "MetropolisJS is a library to connect users to Reaktor",
  "main": "lib/index.js",
  "module": "./index.js",
  "browser": "./index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "lex compile -r -c ./tsconfig.build.json",
    "clean": "lex clean",
    "dev": "lex dev -r",
    "format": "npm run prettier && npm run lint",
    "lint": "eslint ./src/**/**.ts* --fix",
    "pretest": "npm run lint",
    "prettier": "prettier --write ./src",
    "production": "lex build",
    "publish:major": "npm version major && npm run publish:tags && npm publish",
    "publish:minor": "npm version minor && npm run publish:tags && npm publish",
    "publish:patch": "npm version patch && npm run publish:tags && npm publish",
    "publish:tags": "git push --tags && git push origin HEAD",
    "start": "lex dev -r -o",
    "test": "lex test",
    "update": "lex update -i",
    "watch": "lex compile -w"
  },
  "repository": {
    "type": "git",
    "url": "github.com/nitrogenlabs/metropolisjs"
  },
  "keywords": [
    "nitrogenlabs",
    "session",
    "messaging",
    "reaktor"
  ],
  "author": {
    "name": "Giraldo Rosales",
    "email": "giraldo@nitrogenlabs.com",
    "url": "http://nitrogenlabs.com"
  },
  "license": "MIT",
  "dependencies": {
    "@nlabs/rip-hunter": "^2.5.2",
    "@nlabs/utils": "^1.4.1",
    "lodash": "^4.17.21",
    "luxon": "^2.3.1",
    "p-debounce": "^4.0.0",
    "react": "^17.0.2",
    "sockette": "^2.0.6"
  },
  "devDependencies": {
    "@nlabs/arkhamjs": "^3.23.0",
    "@nlabs/arkhamjs-utils-react": "^3.23.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "eslint": "^8.11.0",
    "eslint-config-styleguidejs": "^1.6.0",
    "jest": "^27.5.1",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@nlabs/arkhamjs": "^3.23.0",
    "@nlabs/arkhamjs-storage-browser": "^3.22.0",
    "@nlabs/arkhamjs-utils-react": "^3.23.0"
  }
}